@page "/"
@attribute [Authorize(Roles = "Administrator, Student")]

<PageTitle>Home</PageTitle>

<AuthorizeView Roles="Administrator">
    <MudText Typo="Typo.h5">Hi, @context.User.Identity?.Name! Administrator</MudText>
</AuthorizeView>

<AuthorizeView Roles="Student">
    <MudText Typo="Typo.h5">Hi, @context.User.Identity?.Name! Student</MudText>
</AuthorizeView>