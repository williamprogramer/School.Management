@page "/maintenance/administrator/add"

<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <MudGrid>
        <MudItem xs="12">
            <MudPaper Outlined="false" Elevation="0">
                <MudText Typo="Typo.h6">Agregar administrador</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12">
            <MudPaper Outlined="true" Class="p-3">
                <MudPaper Outlined="false" Elevation="0" Class="mb-3">
                    <MudText Typo="Typo.button" Color="Color.Primary">datos de administrador</MudText>
                </MudPaper>
                <MudGrid>
                    <MudItem xs="12" md="6" lg="3">
                        <MudTextField @bind-Value="TextValue" Label="Nombre completo" Variant="Variant.Outlined" Margin="Margin.Dense" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Person"></MudTextField>
                    </MudItem>
                    <MudItem xs="12" md="6" lg="3">
                        <MudTextField @bind-Value="TextValue" Label="Correo electronico" Variant="Variant.Outlined" Margin="Margin.Dense" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Email"></MudTextField>
                    </MudItem>
                    <MudItem xs="12" md="6" lg="3">
                        <MudDatePicker Label="Fecha de nacimiento" Editable="true" @bind-Date="Birthdate" Mask="@(new DateMask("MM/dd/yyyy"))" DateFormat="MM/dd/yyyy" Placeholder="mm/dd/yyyy" Variant="Variant.Outlined" Margin="Margin.Dense" />
                    </MudItem>
                    <MudItem xs="12" md="6" lg="3">
                        <MudTextField @bind-Value="TextValue" Label="Numero de identificacion" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
                    </MudItem>
                    <MudItem xs="12" md="12" lg="12">
                        <MudTextField @bind-Value="TextValue" Label="Direccion" Variant="Variant.Outlined" Margin="Margin.Dense" AutoGrow MaxLines="2"></MudTextField>
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code
{
    private string TextValue = string.Empty;
    private DateTime? Birthdate;
}